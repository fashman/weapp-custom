.consult-template {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
  top: 0;
  left: 0;
}
.consult-info {
  position: absolute;
  left: 0;
  bottom: -757rpx;
  width: 100%;
  background-color: #eeeeee;
  padding-bottom: 300rpx;
  animation: showConsult .3s ease-out forwards;
}
.consult-template .hideConsultClass {
  animation: hideConsult .3s ease-out forwards;
}
@keyframes showConsult
{
  from  { bottom: -757rpx; }
  to    { bottom: 0; }
}
@keyframes hideConsult
{
  from  { bottom: 0; }
  to    { bottom: -757rpx; }
}
.consult-info .close {
  height: 34rpx;
  padding: 27rpx 30rpx;
  background-color: #555555;
}
.consult-info .close image {
  width: 34rpx;
  height: 34rpx;
  display: block;
  float: right;
}
.consult-info .title {
  padding: 50rpx 0;
  font-size: 36rpx;
  text-align: center;
  border-bottom: 1px solid #eeeeee;
  background-color: #fff;
}
.consult-info .title .span {
  font-size: 26rpx;
  color: #848484;
}
.consult-info .phone {
  overflow: hidden;
  background-color: #fff;
  height: 88rpx;
  margin-bottom: 30rpx;
}
.consult-info .picker {
  width: 265rpx;
  height:  88rpx;
  text-indent: 30rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  position: relative;
  float: left;
}
.consult-info .picker:before {
  content: ' ';
  position: absolute;
  top: 38rpx;
  right: 30rpx;
  border-top: 15rpx solid #333;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
}
.consult-info .picker:after {
  content: ' ';
  position: absolute;
  top: 36rpx;
  right: 30rpx;
  border-top: 15rpx solid #fff;
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
}
.consult-info .input {
  margin-left: 265rpx;
  height: 88rpx;
  position: relative;
}
.consult-info .input .line {
  position: absolute;
  top: 29rpx;
  left: 0;
  height: 30rpx;
  border-left: 1px solid #eee;
}
.consult-info .input input {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  /* border-left: 1px solid #eee; */
  padding: 0 30rpx;
}
.consult-info .submit {
  margin: 0 30rpx;
  background-color: #00bb66;
  color: #fff;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 10rpx;
}
.consult-info .hide {
  display: none;
}