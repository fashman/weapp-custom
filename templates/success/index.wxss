.success-template {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0);
  top: 0;
  left: 0;
  z-index: 20;
}
.success-template .info {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  font-size: 30rpx;
  background-color: rgba(0, 0, 0, .7);
  color: #fff;
  text-align: center;
  padding: 60rpx 20rpx 90rpx;
  border-radius: 10rpx;
}
.success-template .info image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 30rpx;
}