.error-template {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .3);
  top: 0;
  left: 0;
  z-index: 20;
}
.error-template .info {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background-color: #fff;
  text-align: center;
  padding: 50rpx 0 0;
  border-radius: 10rpx;
  text-align: center;
  font-size: 36rpx;
}
.error-template .info .title {
  font-weight: 700;
  margin-bottom: 30rpx;
}
.error-template .info .text {
  color: #999999;
  font-size: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #eee;
}
.error-template .info .close {
  color: #00c200;
  height: 100rpx;
  line-height: 100rpx;
}